

<p id="notice"><%= notice %></p>

<p>
  <h2><%= @brewery.name %></h2>
</p>

<p>
  <i>Established at</i>
  <%= @brewery.year %>
</p>

<p> Number of beers: <%= @brewery.beers.count %></p>


<p>
<ul>
  <% @brewery.beers.each do |beer| %>
  <li>  <%= link_to beer.name, beer %> </li>
        <% end %>

</ul>
</p>


<p>
<% if @brewery.ratings.empty? %>
 Brewery has not yet ratings!
</br>
<% else %>
 Brewery has <%= pluralize(@brewery.ratings.count, 'rating') %>,
 average  <%= @brewery.average_rating %>


<% end %>
<p>
<%= link_to 'Edit', edit_brewery_path(@brewery) %> 

</br></br>

