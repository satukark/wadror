<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <div class="navi">
    <%= link_to 'breweries', breweries_path %>
    <%= link_to 'beers', beers_path %>
    <%= link_to 'styles', styles_path %>
    <%= link_to 'ratings', ratings_path %> 
		<%= link_to 'users', users_path %>
		<%= link_to 'beer clubs', beer_clubs_path %> 
		<%= link_to 'pubs', places_path %> |

    
    <% if not current_user.nil? %>
    <%= link_to current_user.username , current_user %> signed in
    <%= link_to 'rate a beer', new_rating_path %>
    <%= link_to 'join a club', new_membership_path %>
    <%= link_to 'signout', new_session_path, method: :delete %>
    <% else %>
    <%= link_to 'signin', new_session_path %>
    <%= link_to 'signup', new_user_path %>

<% end %>
    
    

    
    



  </div>

<%= yield %>

</body>
</html>
